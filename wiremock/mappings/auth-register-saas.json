{
  "request": {
    "method": "POST",
    "url": "/api/auth/register-saas",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.email"
      },
      {
        "matchesJsonPath": "$.password"
      },
      {
        "matchesJsonPath": "$.firstName"
      },
      {
        "matchesJsonPath": "$.lastName"
      },
      {
        "matchesJsonPath": "$.organizationName"
      },
      {
        "matchesJsonPath": "$.acceptTermsAndConditions"
      },
      {
        "matchesJsonPath": "$.acceptPrivacyPolicy"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "message": "Registration successful. Please check your email to verify your account.",
      "user": {
        "id": 1,
        "email": "user@example.com",
        "firstName": "John",
        "lastName": "Doe",
        "phoneNumber": "+1234567890",
        "isEmailVerified": false,
        "isPhoneVerified": false,
        "requiresPasswordChange": false,
        "roles": []
      },
      "requiresEmailVerification": true,
      "otp": "123456"
    }
  }
}

