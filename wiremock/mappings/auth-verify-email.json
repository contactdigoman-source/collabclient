{
  "request": {
    "method": "POST",
    "url": "/api/auth/verify-email",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.token"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "message": "Email verified successfully",
      "requiresOrganizationSetup": true,
      "showSetupOptions": true,
      "options": {
        "continueSetup": true,
        "doItLater": true
      }
    }
  }
}

