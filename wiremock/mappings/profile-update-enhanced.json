      "dateOfActivation": "2026-01-01T00:00:00Z",
      "dateOfBirth": "1990-01-01T00:00:00Z",
      "empId": "EMP-001",
      "employmentType": "Full Time",
      "designation": "Software Engineer",
      "roles": [
        "ORGUSER"
      ],
      "requiresPasswordChange": false,
      "aadhaarVerification": {
        "isVerified": true,
