{
  "request": {
    "method": "POST",
    "url": "/api/auth/update-profile",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.firstName"
      },
      {
        "matchesJsonPath": "$.lastName"
      }
    ]
  },
