{
  "request": {
    "method": "POST",
    "url": "/api/auth/update-profile",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.firstName"
      },
      {
        "matchesJsonPath": "$.lastName"
      },
      {
        "matchesJsonPath": "$.dateOfBirth"
      },
      {
        "matchesJsonPath": "$.employmentType"
      },
      {
        "matchesJsonPath": "$.designation"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "id": 1,
      "email": "user@example.com",
      "firstName": "John",
      "lastName": "Doe",
      "phoneNumber": "+1234567890",
      "isEmailVerified": true,
      "isPhoneVerified": false,
      "profilePhotoUrl": "https://example.com/profile-photos/user-1.jpg",
      "dateOfBirth": "1990-01-01T00:00:00Z",
      "employmentType": "Full Time",
      "requiresPasswordChange": false,
      "roles": [
        "ORGUSER"
      ],
      "lastSyncedAt": "2024-12-11T10:30:00Z",
      "shiftStartTime": "09:00",
      "shiftEndTime": "17:30"
    }
  }
}
