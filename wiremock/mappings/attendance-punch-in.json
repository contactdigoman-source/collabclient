{
  "request": {
    "method": "POST",
    "urlPattern": "/api/attendance/punch-(in|out)",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.timestamp"
      },
      {
        "matchesJsonPath": "$.userID"
      },
      {
        "matchesJsonPath": "$.punchDirection"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "success": true,
      "message": "Attendance record saved successfully",
      "data": {
        "timestamp": "{{jsonPath request.body '$.timestamp'}}",
        "userID": "{{jsonPath request.body '$.userID'}}",
        "punchDirection": "{{jsonPath request.body '$.punchDirection'}}",
        "dateOfPunch": "{{jsonPath request.body '$.dateOfPunch'}}",
        "synced": true
      }
    },
    "transformers": ["response-template"]
  }
}
