{
  "request": {
    "method": "POST",
    "url": "/api/auth/verify-otp",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": {
          "expression": "$.idpjourneyToken",
          "matches": ".*"
        }
      },
      {
        "matchesJsonPath": {
          "expression": "$.otpValue",
          "matches": ".*"
        }
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "success": true,
      "message": "OTP verified successfully",
      "accountStatus": "active",
      "firstTimeLogin": false,
