{
  "request": {
    "method": "PUT",
    "url": "/api/user/configuration",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.workingHours"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "success": true,
      "message": "Configuration updated successfully",
      "configuration": {
        "workingHours": {
          "enabled": true,
          "startTime": "09:00",
          "endTime": "18:00",
          "minimumHours": 9.0,
          "timezone": "Asia/Kolkata"
        },
        "reminders": {
          "checkInReminder": {
            "enabled": true,
            "time": "08:45",
            "days": [
              "monday",
              "tuesday",
              "wednesday",
              "thursday",
              "friday"
            ]
          },
          "checkOutReminder": {
            "enabled": true,
            "time": "17:45",
            "days": [
              "monday",
              "tuesday",
              "wednesday",
              "thursday",
              "friday"
            ]
          },
          "breakReminder": {
            "enabled": true,
            "intervalMinutes": 30
          }
        }
      }
    }
  }
}
