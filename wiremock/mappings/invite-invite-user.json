{
  "request": {
    "method": "POST",
    "url": "/api/invite/invite",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      },
      "Authorization": {
        "matches": "Bearer .+"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.email"
      },
      {
        "matchesJsonPath": "$.roleId"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "id": 1,
      "email": "invited@example.com",
      "roleId": 11,
      "roleName": "ORGUSER",
      "invitedAt": "2024-01-15T10:00:00Z",
      "expiresAt": "2024-01-22T10:00:00Z",
      "isAccepted": false,
      "isExpired": false,
      "invitationToken": "invitation-token-12345"
    }
  }
}

